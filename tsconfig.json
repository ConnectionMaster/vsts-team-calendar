{
  "compilerOptions": {
    "charset": "utf8",
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "target": "es5",
    "rootDir": "src/",
    "sourceMap": true,
    "outDir": "dist/",
    "jsx": "react",
    "lib": ["es5", "es6", "dom", "es2015.promise"],
    "types": ["react"],
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["legacy","node_modules", "dist"]
}